<service>
  <id>blueprism-automatec-api</id>
  <name>Blue Prism AutomateC API</name>
  <description>Expose AutomateC.exe (Blueprism) as HTTP REST API</description>
  <env name="NODE_ENV" value="production"/>
  <startmode>automatic</startmode>
  <executable>Blue_Prism_AutomateC_API_server.exe</executable>
  <log mode="roll-by-size">
    <sizeThreshold>1024</sizeThreshold>
    <keepFiles>8</keepFiles>
  </log>
  <onfailure action="restart" />
</service>